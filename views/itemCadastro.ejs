<!DOCTYPE html>
<html>
    <head>
        <%- include('./includes/header.ejs') %>
    </head>
    <body>
        <%- include('./includes/menu.ejs') %>

        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->

        <div class='title'>
            <h1>Cadastro de Item</h1>
        </div>
        <div class='conteudo'>
            <div class="forms">
                <form name="form2" method="POST" action="/itemCadastro">
                    <div class='linha'>
                        <div class="conjunto campoTamMax">
                            <label class='label' for='item'>Item</label>
                            <input class='campo' autofocus type='text' id='item' name='item'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class="conjunto campoTamMed">
                            <label class='label' for='tipo'>Tipo de Item</label>
                            <input class='campo' type='text' id='tipo' name='tipo'/>
                        </div> 

                        <div class="conjunto campoTamMed">
                            <label class='label' for='tema'>Temática do Item</label>
                            <input class='campo' type='text' id='tema' name='tema'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class="conjunto campoTamMin">
                            <label class='label' for='preco'>Preço</label>
                            <input class='campo' type='text' id='preco' name='preco'/>
                        </div>
                        <div class="conjunto campoTamMin">
                            <label class='label' for='valorAluguel'>Valor aluguel</label>
                            <input class='campo' type='text' id='valorAluguel' name='valorAluguel'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class="conjunto campoTamMax">
                            <label class='label' for='descricao'>Descrição do Item</label>
                            <textarea class='texto' id='descricao' name='descricao'></textarea>
                        </div>
                    </div>  

                    <div class='linha'>
                        <div class="conjunto">
                            <input type="submit" class='botao botaoAlterar' name="Botao" value="Cadastrar">
                        </div>
                    </div>

                    <div class='subtitle'>
                        <h2>Imagens do Item</h2>
                    </div>

                    <div class='linha'>
                        <div class="conjunto campoTamMed">
                            <input type="file" class='file' id='foto1' name='foto1'/>
                        </div>

                        <div class="conjunto campoTamMed">
                            <input type="file" class='file' id='foto2' name='foto2'/>
                        </div>

                        <div class="conjunto campoTamMed">
                            <input type="file" class='file' id='foto3' name='foto3'/>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </body>
    <footer>
        <%- include('./includes/footer.ejs') %>
        <%  if (mensagem){  %>
            <script>alert('<%= mensagem %>')</script>
        <% } %>
    </footer>
</html>