<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/header.ejs') %>
    </head>
    <body>
        <%- include('../partials/menu.ejs') %>

        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->
        <div class='title'>
            <h1>Cadastro de Cliente</h1>
        </div>
        <div class='forms'>
            <form method='POST' action='/clienteCadastro'> 

                <div class='linha'>
                    <label class='label' for='nome'>Nome</label>
                    <input type='text' id='nome' name='nome'/>
                </div>

                <div class='linha'>
                    <label class='label' for='cpf'>CPF</label>
                    <input type='text' id='cpf' name='cpf'/>

                    <label class='label' for='dataNascimento'>Data de Nascimento</label>
                    <input type='date' id='dataNascimento' name='dataNascimento'/>
                </div>
                
                <div class='linha'>
                    <label class='label' for='telefone'>Telefone</label>
                    <input type='text' id='telefone' name='telefone'/>
                    
                    <label class='label' for='celular'>Celular</label>
                    <input type='text' id='celular' name='celular'/>
                </div>

                <div class='linha'>
                    <label class='label' for='email'>E-mail</label>
                    <input type='text' id='email' name='email'/>
                </div>

                <div class='linha'>
                    <label class='label' for='cep'>CEP</label>
                    <input type='text' id='cep' name='cep'/>                
                    
                    <label class='label' for='uf'>UF</label>
                    <select id="uf" name="uf">
                        <option value=""></option>
                        <option value="SC">SC</option>
                        <option value="RS">RS</option>
                        <option value="PR">PR</option>
                    </select>

                    <label class='label' for='cidade'>Cidade</label>
                    <input type='text' id='cidade' name='cidade'/>
                </div>

                <div class='linha'>
                    <label class='label' for='endereco'>Endereço</label>
                    <input type='text' id='endereco' name='endereco'/>
                </div>

                <div class='linha'>
                    <input type='submit' value='Cadastrar' id='submit' name='cadastro'/>
                </div>
            </form>
        </div>
        <div class='table'>
            <table>

            </table>
        </div>
        <!-- ------------------------- AQUI TERMINA O BLOCO DE CONTEUDO ------------------------- -->
    </body>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</html>