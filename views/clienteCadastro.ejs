<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/header.ejs') %>
    </head>
    <body>
        <%- include('../partials/menu.ejs') %>

        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->
        <div class='title'>
            <h1>Cadastro de Cliente</h1>
        </div>

        <div class='conteudo'>
            <div class='forms'>
                <form method='POST' action='/clienteCadastro'> 

                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='nome'>Nome</label><br/>
                            <input class='campo' type='text' id='nome' name='nome'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='cpf'>CPF</label><br/>
                            <input class='campo' type='text' id='cpf' name='cpf'/>
                        </div>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='dataNascimento'>Nascimento</label><br/>
                            <input class='campo' type='date' id='dataNascimento' name='dataNascimento'/>
                        </div>
                    </div>
                    
                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='telefone'>Telefone</label><br/>
                            <input class='campo' type='text' id='telefone' name='telefone'/>
                        </div>
                        
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='celular'>Celular</label><br/>
                            <input class='campo' type='text' id='celular' name='celular'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='email'>E-mail</label><br/>
                            <input class='campo' type='text' id='email' name='email'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMin'>
                            <label class='label' for='cep'>CEP</label><br/>
                            <input class='campo' type='text' id='cep' name='cep'/>  
                        </div>              
                            
                        <div class='conjunto campoTamMin'>
                            <label class='label' for='uf'>UF</label><br/>
                            <select class='campo' id="uf" name="uf">
                                <option value=""></option>
                                <option value="SC">SC</option>
                                <option value="RS">RS</option>
                                <option value="PR">PR</option>
                            </select>
                        </div>

                        <div class='conjunto campoTamMed'>
                            <label class='label' for='cidade'>Cidade</label><br/>
                            <input class='campo' type='text' id='cidade' name='cidade'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='endereco'>Endereço</label><br/>
                            <input class='campo' type='text' id='endereco' name='endereco'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto'>
                            <input type='submit' class='botao botaoAlterar' value='Cadastrar' id='submit' name='cadastro'/>
                        </div>
                    </div>
                </form>
            </div>
            <div class='table'>
                <table>

                </table>
            </div>
        </div>
        <!-- ------------------------- AQUI TERMINA O BLOCO DE CONTEUDO ------------------------- -->
    </body>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</html>