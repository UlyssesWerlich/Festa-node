<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/header.ejs') %>
    </head>
    <body>
        <%- include('../partials/menu.ejs') %>
        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->
        <div class='title'>
            <h1>Consulta de Usuários</h1>
        </div>
        <div class='conteudo'>
            <div class='forms'>
                <form method="POST" action='/userConsulta'>
                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='nomeConsulta'>Consulta de Nome</label>
                            <input class='campo' autofocus type='text' id='nomeConsulta' name='nomeConsulta'/>
                        </div>

                        <input type='submit' class='botao botaoConsulta' id='submit' value='Consultar' name='consulta'/>

                    </div>
                </form>
            </div>
            <div class='table'>
                <table class='tabela'>
                    <thead>
                        <tr class='linhaCabecalho'>
                            <td>Nome</td>
                            <td>CPF</td>
                            <td>Telefone</td>
                            <td>E-mail</td>
                            <td>Login</td>
                        </tr>
                    </thead>
                    <tbody>
                    <% 
                        if(data){
                        data.forEach(function(details) { %>
                        <tr class='linha1'>
                            <td><%= details.nome %></td>
                            <td><%= details.cpf %></td>
                            <td><%= details.telefone %></td>
                            <td><%= details.email %></td>
                            <td><a href='/userAlterar/<%= details._id %>'><%= details.login %></a></td>
                        </tr>    
                    <% })} %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- ------------------------- AQUI TERMINA O BLOCO DE CONTEUDO -------------------------- -->
    </body>
    <footer>
        <%- include('../partials/footer.ejs') %>
        <%  if (mensagem){  %>
            <script>alert('<%= mensagem %>')</script>
        <% } %>
    </footer>
</html>