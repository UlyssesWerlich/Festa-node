<!DOCTYPE html>
<html>
    <head>
        <%- include('./includes/header.ejs') %>
    </head>
    <body>
        <%- include('./includes/menu.ejs') %>

        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->
        <div class='title'>
            <h1>Consulta de item</h1>
        </div>
        <div class='conteudo'>
            <div class='forms'>
                <form method="POST" action='/itemConsulta'>
                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='itemConsulta'>Item</label>
                            <input class='campo' autofocus type='text' id='itemConsulta' name='itemConsulta'/>
                        </div>

                        <div class='conjunto campoTamMin'>
                            <label class='label' for='itemConsulta'>Tipo</label>
                            <input class='campo' autofocus type='text' id='tipoConsulta' name='tipoConsulta'/>
                        </div>

                        <div class='conjunto campoTamMin'>
                            <label class='label' for='itemConsulta'>Tema</label>
                            <input class='campo' autofocus type='text' id='temaConsulta' name='temaConsulta'/>
                        </div>
                        
                        <input type='submit' class='botao botaoConsulta' id='submit' value='Consultar' name='consulta'/>

                    </div>
                </form>
            </div>
            <div class='table'>
                <table class='tabela'>
                    <thead>
                        <tr class='linhaCabecalho'>
                            <td>Item</td>
                            <td>Tipo</td>
                            <td>Tema</td>
                            <td>Preço</td>
                        </tr>
                    </thead>
                    <tbody>
                    <% 
                        if(data){
                        data.forEach(function(details) { %>
                        <tr class='linha1'>
                            <td><a href='/itemAlterar/<%= details._id %>'><%= details.item %></a></td>
                            <td><%= details.tipo %></td>
                            <td><%= details.tema %></td>
                            <td><%= details.preco %></td>
                        </tr>    
                    <% })} %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- ------------------------- AQUI TERMINA O BLOCO DE CONTEUDO -------------------------- -->
    </body>
    <footer>
        <%- include('./includes/footer.ejs') %>
        <%  if (mensagem){  %>
            <script>alert('<%= mensagem %>')</script>
        <% } %>
    </footer>
</html>