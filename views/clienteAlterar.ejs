<!DOCTYPE html>
<html>
    <head>
        <%- include('../includes/header.ejs') %>
    </head>
    <body>
        <%- include('../includes/menu.ejs') %>

        <!-- ------------------------- AQUI COMEÇA O BLOCO DE CONTEUDO -------------------------- -->
        <div class='title'>
            <h1>Alterar dados de Cliente</h1>
        </div>
        <% 
        if(data){
            data.forEach(function(details) { 
                %>
        <div class='conteudo'>
            <div class='forms'>
                <form method='POST' action='/clienteAlterar/<%= details._id %>'> 
                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='nome'>Nome</label>
                            <input class='campo' autofocus type='text' value="<%= details.nome %>" id='nome' name='nome'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='cpf'>CPF</label>
                            <input class='campo' type='text' value="<%= details.cpf %>" id='cpf' name='cpf'/>
                        </div>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='dataNascimento'>Data de Nascimento</label>
                            <input class='campo' type='date' value="<%= details.dataNascimento %>" id='dataNascimento' name='dataNascimento'/>
                        </div>
                    </div>
                    
                    <div class='linha'>
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='telefone'>Telefone</label>
                            <input class='campo' type='text' value="<%= details.telefone %>" id='telefone' name='telefone'/>
                        </div>
                        
                        <div class='conjunto campoTamMed'>
                            <label class='label' for='celular'>Celular</label>
                            <input class='campo' type='text' value="<%= details.celular %>" id='celular' name='celular'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='email'>E-mail</label>
                            <input class='campo' type='text' value="<%= details.email %>" id='email' name='email'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMin'>
                            <label class='label' for='cep'>CEP</label>
                            <input class='campo' type='text' value="<%= details.cep %>" id='cep' name='cep'/> 
                        </div>               
                        
                        <input type="hidden" value='<%= details.uf %>' id='hiddenUf' />
                        <div class='conjunto campoTamMin'>
                            <label class='label' for='uf'>UF</label>
                            <select class='campo' id="uf" name="uf">
                                <option value=""></option>
                                <option value="SC">SC</option>
                                <option value="RS">RS</option>
                                <option value="PR">PR</option>
                            </select>
                        </div>

                        <div class='conjunto campoTamMed'>
                            <label class='label' for='cidade'>Cidade</label>
                            <input class='campo' type='text' value="<%= details.cidade %>" id='cidade' name='cidade'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto campoTamMax'>
                            <label class='label' for='endereco'>Endereço</label>
                            <input class='campo' type='text' value="<%= details.endereco %>" id='endereco' name='endereco'/>
                        </div>
                    </div>

                    <div class='linha'>
                        <div class='conjunto'>
                            <input type='submit' class='botao botaoAlterar' value='Alterar' name='alterar'/>
                        </div>
                        <div class='conjunto'>
                            <a class='botao botaoExcluir' href="/clienteExcluir/<%= details._id %>">Excluir</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% })} %>
        <!-- ------------------------- AQUI TERMINA O BLOCO DE CONTEUDO ------------------------- -->
    </body>
    <footer>
        <%- include('../includes/footer.ejs') %>
        
        <script>
            var uf = document.getElementById('hiddenUf').value;
            document.getElementById('uf').value = uf;
        </script>
    </footer>
</html>